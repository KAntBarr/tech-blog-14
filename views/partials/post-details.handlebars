    <div class="card card-margin">
        <div class="card-header no-border">
            <h5 class="card-title car-title py-1 px-2">{{post_title}}</h5>
        </div>
        <div class="card-body pt-0">
            <div class="widget-49">
                <textarea readonly class="px-1" style="
                    width: 100%;
                    text-align: left;
